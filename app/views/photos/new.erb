<h1>Post a Picture</h1>

<% unless current_user %>
  You need to sign in to Pic Your Life
<% end %>


<% if current_user %>
<% if @photo.errors.any? %>
  <div>
    <strong>Some issues with your upload, please fix them:</strong>
    <ul>
      <% @photo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/photos">
  <div>
    <label>URL:</label>
    <input type="text" name="photo[url]" value="<%= @photo.url %>">
  </div>
  <div>
    <label>Caption:</label>
    <input type="text" name="photo[caption]" value="<%= @photo.caption %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>
<% end %>